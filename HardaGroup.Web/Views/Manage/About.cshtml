@using HardaGroup.Utility;
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewBag.Title = "关于华尔达";

    string cultureUri = GlobalizationHelp.GetCurrentThreadCultureUri();
    string currentCultureCode = GlobalizationHelp.GetCurrentThreadCultureCode();
    
}

<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12 col-is-12 col-sm-12 col-md-12">
            <div id="toolbar">
                <button id="btnAdd" class="btn btn-primary">
                    <i class="glyphicon glyphicon-plus"></i> 新 增
                </button>
                <button id="btnEdit" class="btn btn-success">
                    <i class="glyphicon glyphicon-plus"></i> 修 改
                </button>
                <button id="btnDelete" class="btn btn-danger">
                    <i class="glyphicon glyphicon-remove"></i> 删 除
                </button>
            </div>
            <table id="table"></table>

        </div>

    </div>

</section>

<!--#region新增-->
<div class="curd-model modal fade" id="aboutadd" role="dialog" aria-hidden="true">
    <div class="modal-content">
        <div class="container">

            <div id="divAddContainer"></div>


        </div>
    </div>
</div>
<!--#endregion 修改-->
<!--#region修改-->
<div class="curd-model modal fade" id="aboutedit" role="dialog" aria-hidden="true">
    <div class="modal-content">
        <div class="container">

            <div id="divEditContainer"></div>


        </div>
    </div>
</div>
<!--#region详细-->
<div class="curd-model modal fade" id="aboutdetail" role="dialog" aria-hidden="true">
    <div class="modal-content">
        <div class="container">

            <div id="divAboutContainer"></div>


        </div>
    </div>
</div>

<!--Script要放在HTML标签后，才能将值绑定到标签-->
<script type="text/javascript">
    $(document).ready(function () {
        InitTable();
        InitToolBarButton();
        InitModalEvent();
    });
    function InitTable()
    {
        $('#table').bootstrapTable({
            height:500,
            method: 'post',                 //The method type to request remote data.
            url: '/About/GetPageData',
            dataType: "json",               //The type of data that you are expecting back from the server.
            contentType:'application/json',
            pagination: true,               //True to show a pagination toolbar on table bottom.
            pageSize: 10,                   //初始化每页显示几条
            pageNumber:1,                   //初始化在第几页
            pageList: [10,25,50,100,200,'All'],
            sidePagination: "server",       //服务端请求
            idField:'Id',
            toolbar:'#toolbar',
            showRefresh:true,
            search: true,
            queryParams: ConstructQueryParams,
            //queryParamsType: "limit",
            locale: 'zh-CN',
            paginationVAlign: 'top',  //分页条显示在顶部
            //searchOnEnterKey:true,  //回车查询
            clickToSelect: true,     //单击行选中数据
            columns: [{
                checkbox: true
            },
            {
                field: 'Id',
                title: 'Id',
                visible:false,
            },
            {
                field: 'TypeCode',
                title: '类别代码',
                sortable: true

            },
            {
                field: 'TypeName',
                title: '类别名称',
                sortable: true

            },
            {
                field: 'Content',
                title: '内容',
                formatter: function (value, row, index) {
                    var result = '<a href="javaScript:void(0)" onclick="Detail(&apos;' + row.Id + '&apos;)">点击查看</a>';
                    return result;
                }

            },
            //{
            //    field: 'Culture',
            //    title: '国际化代码',
            //    sortable: true,
            //    width: '10%'

            //},
            {
                field: 'Sequence',
                title: 'Sequence',
                sortable: true,
                width:'10%'
            }
            ]
        });
    }
    function ConstructQueryParams(param)
    {
        var params = {
            limit: param.limit, //页面大小
            offset:param.offset,//偏移数量
            page: param.offset / param.limit, //页码
            TypeName: param.search,
            Culture: '@currentCultureCode' //根据当前国际化代码过滤数据
        };
        return params;
    }

    function InitModalEvent() {
        $('#aboutadd').on('show.bs.modal', function () {
            //打开事件
        });

        $('#aboutadd').on('hide.bs.modal', function () {
            // 关闭事件
            $("#divAddContainer").html("");

        })

        $('#aboutedit').on('show.bs.modal', function () {
            //打开事件
        });

        $('#aboutedit').on('hide.bs.modal', function () {
            // 关闭事件
            $("#divEditContainer").html("");

        });
        $('#aboutdetail').on('show.bs.modal', function () {
            //打开事件
        });

        $('#aboutdetail').on('hide.bs.modal', function () {
            // 关闭事件
            $("#divAboutContainer").html("");

        });

    }

    function CloseAddScreen() {
        $('#aboutadd').modal('hide');

    }
    function CloseEditScreen() {
        $('#aboutedit').modal('hide');

    }

    function InitToolBarButton()
    {

        $("#btnAdd").click(function(){
            $('#aboutadd').modal('show');
            $("#divAddContainer").load("@cultureUri/About/Add");
        });

        $("#btnEdit").click(function () {

            var selections = $('#table').bootstrapTable('getSelections');
            if (selections.length == 0) {
                layer.alert("请选择要将要修改的数据", {
                    skin: 'layui-layer-molv'
                            , closeBtn: 0
                            , shift: 5 //动画类型
                });
                return;
            } else if (selections.length != 1)
            {
                layer.alert("只能选择一条数据进行修改", {
                    skin: 'layui-layer-molv'
                            , closeBtn: 0
                            , shift: 5 //动画类型
                });
                return;
            }

            var id = selections[0].Id;
            $('#aboutedit').modal('show');
            $("#divEditContainer").load("@cultureUri/About/Edit?id=" + id);

        });

        $("#btnDelete").click(function(){
            var selections = $('#table').bootstrapTable('getSelections');
            if(selections.length == 0)
            {
                layer.alert("请选择要将要删除的数据", {
                    skin: 'layui-layer-molv'
                            ,closeBtn: 0
                            ,shift: 5 //动画类型
                });
                return ;
            }
            var aboutIds =[];
            for(var i=0;i<selections.length;i++)
            {
                var id = selections[i].Id;
                aboutIds.push(id);
            }
            //delete records
            var jsonContactId = JSON.stringify(aboutIds);
            $.ajax({
                type: "post",//使用get方法访问后台
                dataType: "json",//返回json格式的数据
                url: "/About/BachDeleteById",
                data: jsonContactId,
                async:false,
                success: function(message){
                    if(message.Success)
                    {
                        RefreshTable();
                    }else{
                        layer.alert(message.Content, {
                            skin: 'layui-layer-molv'
                            ,closeBtn: 0
                            ,shift: 5 //动画类型
                        });
                    }

                }
            });
        });
    }

    function Detail(id) {
        $('#aboutdetail').modal('show');
        $("#divAboutContainer").load("/About/Detail?id=" + id);
    }

    function RefreshTable()
    {
        $('#table').bootstrapTable('refresh');

    }
</script>
 